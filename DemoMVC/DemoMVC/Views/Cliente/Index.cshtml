@model IEnumerable<DemoMVC.Models.Cliente>

@{
    ViewBag.Title = "Lista de clientes";
}

<h2>Lista de clientes</h2>

<div style="display: inline; background-color: blue; width: 900px;">
    @Html.Partial("PartialBtnCreate")
    @Html.Partial("PartialBtnLista")
    @*@Html.Action("PartialBtnLista")    *@
</div>

<table class="table table-hover">
    <tr style="background-color: #000; color: #fff">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
